<div class="mdl-cell mdl-card mdl-cell--3-col mdl-cell--4-col-phone mdl-cell--4-col-tablet postSummery">
    <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text"><%- item.title || item.link%></h2>
    </div>
    <div class="mdl-card__supporting-text">
        <!-- Content -->
        <%- item.excerpt || item.content %>
    </div>
    <div class="mdl-card__actions mdl-card--border">
        <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="<%- config.root %><%- item.path %>">
            <%= theme.excerpt_link %>
        </a>
    </div>
</div>
